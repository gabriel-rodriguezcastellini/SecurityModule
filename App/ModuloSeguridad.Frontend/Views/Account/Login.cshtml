@model AccountLoginViewModel
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col col-xl-6 mx-auto">
        @using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "text-center border border-light p-5" }))
        {
            @Html.AntiForgeryToken()
            <p class="h4 mb-4">Iniciar Sesión</p>            
            <span class="text-danger">@Model.ErrorMessage</span>
            <div class="form-group row">
                <div class="col-2 my-auto text-left">
                    @Html.LabelFor(m => m.NombreUsuario)
                </div>
                <div class="col">
                    @Html.EditorFor(m => m.NombreUsuario, new { htmlAttributes = new { @class = "form-control mx-sm-3" }, })
                    @Html.ValidationMessageFor(m=>m.NombreUsuario, null, htmlAttributes:new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2 my-auto text-left">
                    @Html.LabelFor(m => m.Clave)
                </div>
                <div class="col">
                    @Html.EditorFor(m => m.Clave, new { htmlAttributes = new { @class = "form-control mx-sm-3" }, })
                    @Html.ValidationMessageFor(m => m.Clave, null, htmlAttributes: new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col offset-2">
                    <a href="@Url.Action(nameof(ModuloSeguridad.Frontend.Controllers.UsuariosController.RecuperarClave), nameof(ModuloSeguridad.Entities.ModuloSeguridadContext.Usuarios))" class="mx-sm-3">Recuperar Clave</a>
                </div>
            </div>

            <div class="form-group row">
                <div class="col offset-2">
                    <button class="btn btn-info btn-block my-4 mx-sm-3" type="submit">Aceptar</button>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
