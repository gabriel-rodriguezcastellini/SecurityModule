@model UsuarioCambiarClaveViewModel
@{
    ViewData["Title"] = "Cambiar clave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col text-center">
        <h1>Cambiar Clave</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mx-auto">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()            

            <div class="form-group row">
                <div class="col-4 my-auto text-left">
                    @Html.LabelFor(m => m.ClaveActual)
                </div>
                <div class="col">
                    @Html.EditorFor(m => m.ClaveActual, new { htmlAttributes = new { @class = "form-control mx-sm-3" }, })
                    @Html.ValidationMessageFor(m => m.ClaveActual, null, htmlAttributes: new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4 my-auto text-left">
                    @Html.LabelFor(m => m.ClaveNueva)
                </div>
                <div class="col">
                    @Html.EditorFor(m => m.ClaveNueva, new { htmlAttributes = new { @class = "form-control mx-sm-3" }, })
                    @Html.ValidationMessageFor(m => m.ClaveNueva, null, htmlAttributes: new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4 my-auto text-left">
                    @Html.LabelFor(m => m.ClaveNuevaConfirmada)
                </div>
                <div class="col">
                    @Html.EditorFor(m => m.ClaveNuevaConfirmada, new { htmlAttributes = new { @class = "form-control mx-sm-3" }, })
                    @Html.ValidationMessageFor(m => m.ClaveNuevaConfirmada, null, htmlAttributes: new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col text-right">
                    <button type="submit" class="btn btn-success">Aceptar</button>
                    <a href="@Url.Action(nameof(ModuloSeguridad.Frontend.Controllers.HomeController.Index), Constantes.Modulos.Usuarios)" class="btn btn-primary">Cancelar</a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}