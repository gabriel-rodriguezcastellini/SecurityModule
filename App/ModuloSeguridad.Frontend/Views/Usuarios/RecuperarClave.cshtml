@model UsuarioRecuperarClaveViewModel
@{
    ViewData["Title"] = "RecuperarClave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col text-center">
        <h1>Recuperar Clave</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-6 mx-auto">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-group row">
                <div class="col-2 my-auto text-left">
                    @Html.LabelFor(m => m.Usuario)
                </div>
                <div class="col">
                    @Html.EditorFor(m => m.Usuario, new { htmlAttributes = new { @class = "form-control mx-sm-3" }, })
                    @Html.ValidationMessageFor(m => m.Usuario, null, htmlAttributes: new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-2 my-auto text-left">
                    @Html.LabelFor(m => m.Mail)
                </div>
                <div class="col">
                    @Html.EditorFor(m => m.Mail, new { htmlAttributes = new { @class = "form-control mx-sm-3" }, })
                    @Html.ValidationMessageFor(m => m.Mail, null, htmlAttributes: new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col text-right">
                    <button type="submit" class="btn btn-success">Aceptar</button>
                    <a href="@Url.Action(nameof(ModuloSeguridad.Frontend.Controllers.UsuariosController.Login), Constantes.Modulos.Usuarios)" class="btn btn-primary">Cancelar</a>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}