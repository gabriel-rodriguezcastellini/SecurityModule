@model ModuloSeguridad.Entities.Usuario
@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row my-auto">
    <div class="col col-lg-6 mx-auto">
        @using (Html.BeginForm(null, null, null, FormMethod.Post, true, new { @class="text-center mt-5 w-auto"}))
        {
            @Html.AntiForgeryToken()
            <p class="h4 mb-4">Iniciar Sesión</p>

            <div class="form-group row">
                @Html.LabelFor(u => u.NombreUsuario, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    <div class="md-form mt-0">
                        @Html.EditorFor(u => u.NombreUsuario, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.NombreUsuario)
                    </div>
                </div>
            </div>

            <div class="form-group row">
                @Html.LabelFor(u => u.Clave, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    <div class="md-form mt-0">
                        @Html.PasswordFor(u => u.Clave, new { @class = "form-control" })
                        @Html.ValidationMessageFor(u => u.Clave)
                    </div>
                </div>
            </div>            

            <a href="@Url.Action(nameof(ModuloSeguridad.Frontend.Controllers.UsuariosController.RecuperarClave), nameof(ModuloSeguridad.Frontend.Controllers.UsuariosController))">Recuperar Clave</a>

            <button class="btn btn-info btn-block my-4" type="submit">Aceptar</button>
        }
    </div>
</div>