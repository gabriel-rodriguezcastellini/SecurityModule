@model IQueryable<UsuariosIndexViewModel.Usuario>

@(Html
    .Grid(Model)
    .Build(columns =>
    {
        columns.Add(model=>model.NombreUsuario).Titled("Usuario");
        columns.Add(model=>model.ApellidoNombre).Titled("Apellido y Nombre");
        columns.Add(model=>model.Grupos).Titled("Grupos");
        columns.Add(model=>model.Email).Titled("Email");
        columns.Add(model => model.Estado).Titled("Estado");
    })
    .AppendCss("table-hover")
    .RowAttributed(model => new { @class = model.Estado == ModuloSeguridad.Services.Common.Enums.EstadoUsuarios.Activo.ToString() ? "green lighten-4 activo" :
        null, data_nombre_usuario = model.NombreUsuario, @style="cursor:pointer"})
    .Using(GridFilterMode.Header)
    .Empty("Datos no encontrados")
    .Sortable()
    .Pageable(pager=>
    {
        pager.PageSizes = new Dictionary<int, string> { { 2, "2" }, { 4, "4" }, { 5, "5" } };
        pager.ShowPageSizes = true;
        pager.PagesToDisplay = 3;
        pager.CurrentPage = 1;
        pager.RowsPerPage = 5;
    })
)